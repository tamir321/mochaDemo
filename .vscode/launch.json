    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha"
        },
        {
            "name": "Run mocha",
            "request": "launch",
            "type": "node",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "stopOnEntry": false,
            "args": [
                "test/firstTest.js"
            ],
            "env": {
                "NODE_ENV": "test"
            },
            "runtimeExecutable": null
        }
    ]
}